{
    "version": 2,
    "builds": [
      { "src": "server.js", "use": "@vercel/node" },
      { "src": "public/**", "use": "@vercel/static" },
      { "src": "index.html", "use": "@vercel/static" }
    ],
    "rewrites": [
      { "source": "/api/(.*)", "destination": "/server.js" },
      { "source": "/public/(.*)", "destination": "/public/$1" },
      { "source": "/(.*)", "destination": "/index.html" }
    ]
  }